{
  "name": "resume-generator",
  "version": "1.0.0",
  "author": {
    "name": "Patrick Reagan",
    "email": "github@the-reagans.com"
  },
  "license": "MIT",
  "prettier": {
    "singleQuote": true,
    "useTabs": false,
    "printWidth": 80,
    "tabWidth": 2
  },
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "prebuild": "rimraf dist/",
    "postbuild": "copyfiles -u 1 src/assets/* dist",
    "build": "tsc --build tsconfig.build.json",
    "prepack": "yarn build"
  },
  "bin": {
    "resume": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/ejs": "^3.1.5",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "ejs": "^3.1.9",
    "marked": "^10.0.0",
    "pdf-merger-js": "^4.3.0",
    "puppeteer": "^21.5.2"
  }
}
